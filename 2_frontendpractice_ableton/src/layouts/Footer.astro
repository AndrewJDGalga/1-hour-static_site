---
import LinksList from "../components/LinksList.astro";
import IconLink from "../components/IconLink.astro";
import OptionGroup from "../components/OptionGroup.astro";
---

<footer>
    <div class="w-10/12 m-auto">
        <h2>Ableton</h2>
        <div class="grid grid-cols-3 grid-rows-2">
            <div>
                <LinksList listItems={
                    {
                        'Register Live or Push >':'#', 
                        'About Ableton >':'#',
                        'Jobs >' : '#',
                    }} />
                <ul class="flex flex-row justify-between w-11/12">
                    <IconLink targetLink="#" imgLink="fb_icon.svg" altTest="Facebook icon" /> 
                    <IconLink targetLink="#" imgLink="twit_icon.svg" altTest="Twitter icon" />
                    <IconLink targetLink="#" imgLink="./yt_icon.svg" altTest="YouTube icon" />
                    <IconLink targetLink="#" imgLink="./insta_icon.svg" altTest="Instagram icon" />
                    <IconLink targetLink="#" imgLink="./tt_icon.svg" altTest="TikTok icon" />
                </ul>
            </div>
            <LinksList title="Education" listItems={{
                'Offers for students and teaders >':'#',
                'Ableton for the Classroom >':'#',
                'Ableton for Colleges and Universities >' : '#'
            }}/>
            <ul>
                <li><p>Sign up to our newsletter</p></li>
                <li><p>Enter your email address to stay up to date with the latest offers, tutorials, downloads, surveys and more.</p></li>
                <li>
                    <form class="flex flex-row">
                        <input class="bg-grey p-1 pl-4 pr-4 grow" id="newsletter-email" type="email" placeholder="Email Address">
                        <button class="bg-blue-200 text-white pl-6 pr-6 p-1 grow-0" type="submit">Sign up</button>
                    </form>
                </li>
            </ul>
            <LinksList title="Community" listItems={{
                'Find Ableton User Groups >':'#',
                'Find Certified Training >':'#',
                'Become a Certified Trainer >' : '#'
            }} />
            <ul>
                <li><p>Language and Location</p></li>
                <li>
                    <OptionGroup listItems={{
                        English:'en',
                        Deutsch:'de',
                        'Francais':'fr',
                        '日本語':'ja',
                        '简体中文':'zh-ch',
                        'Español':'es'
                    }} />
                    <OptionGroup listItems={{
                        'Please choose':'',
                        'United States':'us',
                        'United Kingdom':'uk',
                        'France':'fr',
                        'Germany':'de',
                        'Canada':'ca',
                        'Japan':'jp',
                        'Cut for time': 'cft'
                    }}/>
                </li>
            </ul>
        </div>
        <nav class="flex flex-row text-sm justify-between">
            <ul class="flex flex-row ">
                <li><a class="mr-4" href="#">Contact Us</a></li>
                <li><a class="mr-4" href="#">Press Resources</a></li>
                <li><a class="mr-4" href="#">Legal Info</a></li>
                <li><a class="mr-4" href="#">Privacy Policy</a></li>
                <li><a class="mr-4" href="#">Cookie Settings</a></li>
                <li><a class="mr-4" href="#">Imprint</a></li>
            </ul>
            <ul class="flex flex-row">
                <li class="mr-4">Made in Berlin</li>
                <li><img src="logo.svg"></li>
            </ul>
        </nav>
    </div>
</footer>