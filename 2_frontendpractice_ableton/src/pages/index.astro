---
import Head from "../layouts/Head.astro"

import Lorem100 from "../components/Lorem100.astro";
---
<html lang="en-US">
<Head/>
<body class="font-sans">
    <nav id="upscroll" class="bg-orange w-full static">
        <ul class="flex flex-row">
            <li>Test</li>
            <li>Test</li>
            <li>Test</li>
        </ul>
    </nav>
    <div class="">
        <Lorem100 />
        <Lorem100/>
    </div>
</body>
</html>

<script>
    const upscroll = document.getElementById('upscroll');
    const safety = 16;
    let lastPos = 0;

    document.onscroll = () => {
        let windowY = window.scrollY;
        if(windowY < lastPos && windowY > safety) {
            upscroll.classList.add('fixed');
        } else {
            upscroll.classList.remove('fixed');
        }
        lastPos = windowY;
    }
</script>